{
  "plugins": {
    "release-it-pnpm": {
      "publishCommand": "echo 'skipping publish'"
    }
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": [
      "pnpm run lint",
      "pnpm run typecheck",
      "pnpm run test --run"
    ],
    "after:bump": [
      "pnpm run build",
      "pnpm run build-firefox",
      "pnpm run pack:zip",
      "pnpm run pack:zip-firefox",
      "pnpm run pack:zip-firefox-sources",
      "pnpm run submit"
    ],
    "after:release": "gh release upload v${version} extension.zip extension-firefox.zip"
  }
}
